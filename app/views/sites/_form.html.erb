<%= form_with(model: site) do |form| %>
  <% if site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
        <% site.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :repo %>
    <%= form.text_field :repo, readonly: true, style: "width: 250px" %>
  </div>

  <div class="field">
    <%= form.label :branch %>
    <%= form.text_field :branch, value: 'main' %>
  </div>

<!--  <div class="field">-->
    <%#= form.label :installation_id %>
    <%= form.number_field :installation_id, hidden: true %>
<!--  </div>-->

  <div class="actions">
    <%= form.submit class: 'button is-primary', disabled: @user.sites.map(&:repo).include?(site.repo) %>
  </div>
<% end %>
