<section class="section">
  <div class="notification notice"><%= notice %></div>

  <%= render @site %>

  <div>
      <%= link_to "Edit this site", edit_site_path(@site) %> |
      <%= link_to "Back to sites", sites_path %>

      <%= button_to "Destroy this site", site_path(id: @site), method: :delete, class: "button is-danger" %>
  </div>
</section>
